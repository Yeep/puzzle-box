puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl start box1_splash.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl restart box1_splash.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl stop box1_splash.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl disable box1_splash.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl enable box1_splash.service

