puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl stop box1_level[0-9]*.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl disable box1_level[0-9]*.service
puzzlebox ALL=(ALL) NOPASSWD: /bin/systemctl enable box1_level[0-9]*.service